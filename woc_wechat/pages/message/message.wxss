page {
  background-color: #181727;
  color: white;
}

.top {
  position: absolute;
  width: 100%;
  height: 240rpx;
  display: grid;
  grid-template-columns: 33.33% 33.33% 33.33%;
}

.grid_item {
  text-align: center;
}

.grid_item_image {
  margin-top: 30rpx;
  width: 120rpx;
  height: 120rpx;
}

.grid_item_font {
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
}

.list {
  position: absolute;
  top: 240rpx;
  width: 100%;
}

.list_item {
  position: relative;
  display: flex;
  width: 90%;
  height: 135rpx;
  left: 5%;
  border: 1rpx solid lightgray;
  border-right: none;
  border-left: none;
  border-top: none; 
}

.list_item_image {
  width: 90rpx;
  height: 90rpx;
  margin-left: 10rpx;
  margin-top: 30rpx;
}

.list_item_font {
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 200rpx;
  color: rgba(255, 255, 255, 100);
}

.list_item_font1 {
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  margin-top: 10rpx;
}

.list_item_font2 {
  color: rgba(153, 153, 153, 100);
  font-size: 28rpx;
  margin-top: 8rpx;
}

.list_item_time {
  position: relative;
  left: 220rpx;
  width: 140rpx;
  height: 40rpx;
  top: 30rpx;
  color: rgba(153, 153, 153, 100);
  text-align: right;
}