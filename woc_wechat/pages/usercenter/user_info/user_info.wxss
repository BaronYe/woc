page {
  background-color: black;
}

.avatar {
  position: absolute;
  width: 100%;
  height: 330rpx;
}

.user_avatar {
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  left: 250rpx;
  top: 40rpx;
  border-radius: 50%;
  border: 1rpx solid #000000;
}

.list {
  position: absolute;
  width: 100%;
  height: 500rpx;
  top: 330rpx;
}

.list_item {
  position: relative;
  width: 94%;
  height: 70rpx;
  margin-top: 30rpx;
  margin-left: 3%;
  color: white;
  border: 1rpx solid lightgray;
  border-top: none;
  border-right: none;
  border-left: none;
}

.list_item_font {
  margin-left: 15rpx;
  margin-top: 10rpx;
  width: 118px;
  height: 24px;
  color: rgba(255, 255, 255, 100);
  font-size: 34rpx;
}

.list_item_info {
  position: absolute;
  right: 8%;
  color: rgba(153, 153, 153, 100);
  font-size: 14px;
  top: 5rpx;
}

.list_item_go {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 5rpx;
  top: -5rpx;
}