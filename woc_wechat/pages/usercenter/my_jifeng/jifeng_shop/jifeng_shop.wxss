page {
  background-color: #181727;
  color: white;
}

.tab {
  width: 100%;
  display: flex;
  height: 80rpx;
  background-color: #1E1D2D 100%;
  border: 1rpx solid #bbbbbb;
  border-top: none;
  border-left: none;
  border-right: none;
}

.tab_item {
  width: 110rpx;
  margin-top: 20rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 34rpx;
  text-align: center;
}

.selected {
  font-weight: bold;
}

.item_detail {
  position: relative;
  width: 96%;
  left: 2%;
}

.card {
  position: relative;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  width: 720rpx;
  height: 260rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  background-color: white;
  color: black;
  box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(0, 0, 0, 0.1);
}

.img {
  width: 260rpx;
  height: 260rpx;
  border-radius: 20rpx 0rpx 0rpx 20rpx;
}

.detail {
  position: relative;
  width: 460rpx;
  margin-top: 30rpx;
}

.title {
  margin-top: 20rpx;
  margin-left: 30rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
}

.jifeng {
  margin-top: 110rpx;
  width: 100%;
  display: flex;
}

.font {
  margin-left: 30rpx;
  width: 200rpx;
  color: rgba(236, 183, 81, 100);
  font-size: 36rpx;
}

.count {
  position: absolute;
  float: right;
  right: 20rpx;
  color: rgba(157, 158, 157, 100);
  font-size: 24rpx;
}