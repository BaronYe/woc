page {
  background-color: #181727;
  color: white;
}

.top {
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 10%;
  background-color: rgba(30, 29, 45, 100);
}

.card_title {
  margin-top: 10rpx;
  margin-left: 30rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
}

.card_bable {
  margin-left: 20rpx;
  margin-top: 10rpx;
  width: 80rpx;
  height: 40rpx;
  color: #DF065E;
  font-size: 28rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 1rpx solid rgba(223, 6, 94, 100);
}

.box_money {
  margin-left: 20rpx;
  color: rgba(255, 0, 77, 100);
  font-size: 36rpx;
}

.main {
  position: absolute;
  width: 100%;
  height: 65%;
  top: 11%;
  text-align: center;
}

.title {
  font-size: 36rpx;
}

.box {
  position: absolute;
  top: 100rpx;
  left: 190rpx;
  width: 50%;
  height: 85%;
  transition: all 1.5s;
  backface-visibility: hidden;
  border-radius: 20rpx;
  cursor: pointer;
}

.box image {
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}

.b2 {
  transform: rotateY(-180deg);
}


.button {
  position: absolute;
  top: 80%;
  display: flex;
  width: 100%;
  height: 10%;
}

.button_red {
  width: 220rpx;
  height: 85rpx;
  margin-left: 100rpx;
  margin-right: 50rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 47, 87, 100);
  text-align: center;
}

.button_yellow {
  width: 220rpx;
  height: 85rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 204, 0, 100);
  text-align: center;
}

/* 遮罩 */
.shadow {
  width: 100%;
  height: 100%;
  z-index: 80;
  position: absolute;
  top: 0;
  background-color: #000;
  opacity: 0.5;
}

/* 上滑高度 */
.choosen {
  width: 94%;
  left: 3%;
  height: 60%;
  position: fixed;
  top: 10%;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 98;
}

