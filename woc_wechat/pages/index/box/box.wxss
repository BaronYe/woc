page {
  background-color: #181727;
  color: white;
}

.top {
  position: relative;
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  display: flex;
}

.top_item {
  height: 100rpx;
  margin-left: 170rpx;
  margin-top: 20rpx;
}

.scroll-view {
  white-space: nowrap;
}

.box {
  position: relative;
  display: inline-block;
  width: 94%;
  margin-left: 3%;
  margin-top: 20rpx;
  height: 400rpx;
  border-radius: 20rpx;
  background-color: rgba(30, 29, 45, 100);
  text-align: center;
  box-shadow: 0rpx 4rpx 12rpx 4rpx rgba(0, 0, 0, 0.4);
}

.box_image {
  width: 100%;
  height: 300rpx;
}

.box_bottom {
  display: flex;
  margin-top: 10rpx;
}

.box_bable {
  margin-top: 10rpx;
  margin-left: 20rpx;
  width: 80rpx;
  height: 45rpx;
  color: #9f8500;
  font-size: 28rpx;
  border: 2rpx solid rgba(159, 133, 0, 100);
}

.box_title {
  margin-top: 10rpx;
  margin-left: 20rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
}

.box_money {
  position: absolute;
  right: 10rpx;
  margin-top: 10rpx;
  text-align: right;
  color: #FF004D;
}

.bottom {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
}

.tab {
  width: 100%;
  display: flex;
  height: 100rpx;
}

.tab_item {
  width: 150rpx;
  height: 50rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 30rpx;
  text-align: center;
}

.selected {
  color: #f44444;
  border: 6rpx solid #f44444;
  border-top: none;
  border-right: none;
  border-left: none;
}

.list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.card {
  position: relative;
  width: 340rpx;
  height: 400rpx;
  margin-left: 25rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  background-color: rgba(30, 29, 45, 100);
  box-shadow: 2rpx 2rpx 20rpx 2rpx rgba(0, 0, 0, 0.4);
}

.card_image {
  width: 100%;
  height: 260rpx;
}

.card_title {
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  margin-left: 10rpx;
}

.card_bable {
  width: 80rpx;
  height: 50rpx;
  color: #DF065E;
  text-align: center;
  border-radius: 20rpx;
  border: 1rpx solid rgba(223, 6, 94, 100);

}