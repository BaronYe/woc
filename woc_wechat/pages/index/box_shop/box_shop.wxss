page {
  background-color: #181727;
  color: white;
}

.top {
  position: relative;
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  display: flex;
}

.top_item {
  height: 100rpx;
  margin-left: 170rpx;
  margin-top: 20rpx;
}

.page__bd {
  position: absolute;
  width: 100%;
  color: #101010;
}


.list {
  position: absolute;
  top: 220rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  z-index: -1;
}

.card {
  position: relative;
  width: 340rpx;
  margin-left: 25rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  background-color: rgba(30, 29, 45, 100);
  box-shadow: 2rpx 2rpx 20rpx 2rpx rgba(0, 0, 0, 0.4);
}

.card_image {
  width: 100%;
  height: 260rpx;
}

.card_title {
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 30rpx;
  margin-left: 10rpx;
}

.card_main {
  color: rgba(183, 182, 182, 100);
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.box_money {
  position: absolute;
  left: 10rpx;
  color: rgba(230, 11, 48, 100);
  font-size: 36rpx;
  bottom: 10rpx;
}

.box_button {
  position: absolute;
  right: 10rpx;
  width: 140rpx;
  height: 56rpx;
  padding-left: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #FF2F57;
  bottom: 10rpx;
}