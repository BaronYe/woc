Page {
  background-color: #181727;
  color: white;
}

.address {
  position: relative;
  margin-top: 60rpx;
  width: 96%;
  left: 2%;
  line-height: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 4rpx 12rpx 4rpx rgba(0, 0, 0, 0.4);
  background-color: #1E1D2D;
}

.goods {
  position: relative;
  margin-top: 30rpx;
  width: 96%;
  left: 2%;
  line-height: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 4rpx 12rpx 4rpx rgba(0, 0, 0, 0.4);
  background-color: #1E1D2D;
}

.good_content {
  margin-top: 20rpx;
  display: flex;
}

.goods_title {
  margin-top: 20rpx;
  margin-left: 40rpx;
  width: 450rpx;
}

.address_top {
  position: relative;
  display: flex;
  width: 96%;
  margin-left: 2%;
  height: 60rpx;
}

.go {
  position: absolute;
  right: 0rpx;
  top: 8rpx;
  width: 50rpx;
  height: 50rpx;
}

.dic {
  width: 96%;
  margin-left: 2%;
  margin-top: 20rpx;
  display: flex;
}

.dic_content {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.dic_content_top {
  display: flex;
}

.dic_content_bottom {
  margin-top: 10rpx;
  color: rgba(157, 158, 157, 100);
  font-size: 24rpx;
}

.pay {
  position: relative;
  margin-top: 60rpx;
  width: 96%;
  left: 2%;
  height: 280rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 4rpx 12rpx 4rpx rgba(0, 0, 0, 0.4);
  background-color: #1E1D2D;
}

.pay_font {
  position: relative;
  color: rgba(255, 255, 255, 100);
  font-size: 32rpx;
  margin-left: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.weixin {
  display: flex;
  margin-left: 60rpx;
  margin-top: 20rpx;
}


.button {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #FF2F57;
  text-align: center;
}