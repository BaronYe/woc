/* pages/release/release.wxss */
page {
  background-color: #181727;
  color: #bfbfbf;
}

.page {
  padding: 20px
}

.text_content {
  width: 680rpx;
  height: 380rpx;
  line-height: 45rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(187, 187, 187, 100);
}

.text {
  position: relative;
  left: 20rpx;
  top: 20rpx;
  color: rgba(211, 211, 212, 100);
  font-size: 30rpx;
  text-align: left;
}

.huati {
  position: relative;
  display: flex;
  top: 30rpx;
  left: 20rpx;
  width: 110rpx;
  height: 50rpx;
  border-radius: 200rpx;
  text-align: center;
  background-color: white;
}

.image_content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
  margin-top: 40rpx;
}

.image {
  width: 160rpx;
  height: 160rpx;
  padding: 10rpx;
  border-radius: 30rpx;
}

.moment_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.list_item {
  position: relative;
  display: flex;
  width: 100%;
  height: 90rpx;
  border: 1rpx solid lightgray;
  border-right: none;
  border-left: none;
}

.list_item_image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.list_item_font {
  margin-left: 10rpx;
  margin-top: 20rpx;
  width: 160rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 35rpx;
}

.list_item_go {
  position: relative;
  left: 160rpx;
  width: 270rpx;
  margin-top: 20rpx;
  color: rgba(147, 148, 148, 100);
  font-size: 28rpx;
  text-align: right;
}

.send {
  position: relative;
  margin-top: 100rpx;
  width: 190rpx;
  height: 70rpx;
  line-height: 40rpx;
  border-radius: 200rpx;
  background-color: rgba(244, 68, 68, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  text-align: center;
}